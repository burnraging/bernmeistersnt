      <char style="fk">[h]</char>
      <char style="ft"><char style="it">afterlife</char>…Lit: <char style="it">resurrection</char></char>
    </note>
    <note caller="[i]" style="f">
      <char style="fk">[i]</char>
      <char style="ft"><char style="it">the council</char>…Lit: <char style="it">the Sanhedrin</char></char>
      <char style="fp"></char>
    </note>
    <note caller="[A]" style="f">
      <char style="fk">[A]</char>
