    <note caller="[d]" style="f">
      <char style="fk">[d]</char>
      <char style="ft"><char style="it">miracles</char>…Lit: <char style="it">signs and wonders</char></char>
    </note>
    <note caller="[e]" style="f">
      <char style="fk">[e]</char>
